@model IEnumerable<Hotle>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">

    <form asp-controller="Home" asp-action="CreateNewRecord" method="post">
        <div class="row">
            <div class="col">
                <label for="Name" class="p-2">اسم الفندق</label>
                <input type="text" id="Name" name="Name" class="form-control form-control-sm" />


            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label for="Address" class="p-2"> عنوان الفندق </label>
                <input type="text" id="Address" name="Address" class="form-control form-control-sm" />


            </div>
            <div class="col-sm-6">
                <label for="Address" class="p-2">  المدينة</label>
                <input type="text" id="City" name="City" class="form-control form-control-sm" />


            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <label for="Email" class="p-2">البريد الإليكتروني </label>
                <input type="text" id="Email" name="Email" class="form-control form-control-sm" />


            </div>
            <div class="col-sm-6">
                <label for="Phone" class="p-2"> رقم الهاتف </label>
                <input type="text" id="Phone" name="Phone" class="form-control form-control-sm" />


            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="Images" class="p-2"> الصورة </label>
                <input type="text" id="Images" name="Images" class="form-control form-control-sm" />
            </div>

        </div>

        <div class="row mt-3">
            <div class="col text-center">

                <button class="btn btn-success" type="submit">حفظ</button>


            </div>

        </div>
    </form>

    <form asp-controller="Home" asp-action="Index" method="post">
    <div class="row">
        <div class="col">
            <input type="text" id="City" name="City" class="form-control form-control-sm" />
        </div>

    </div>

    <div class="row mt-3">
        <div class="col text-center">
            <button class="btn btn-success" type="submit">حفظ</button>
        </div>
    </div>
    <table class="table table-bordered mt-5">
        <thead>
            <tr class="text-center">
                <th>رقم الفندق</th>
                <th>اسم الفندق</th>
                <th>عنوان الفندق</th>
                <th>المدينة</th>
                <th>رقم العاتف</th>
                <th> البريد الإليكتروني</th>
                <th colspan="2">إجراء </th>
            </tr>
        </thead>
        <tbody>
                @if (ViewBag._context.hotles != null)
                {
                    @foreach (var item in ViewBag._context.hotles)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>حذف</td>
                            <td>تعديل</td>
                        </tr>
                    }
                }
           



        </tbody>

    </table>
    </form>
</div>

